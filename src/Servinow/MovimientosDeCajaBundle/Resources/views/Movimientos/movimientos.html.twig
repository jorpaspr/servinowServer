{% extends 'ServinowMovimientosDeCajaBundle::Movimientos/base.html.twig' %}

{% block central_movimientos_caja_movimientos %}
<table id="movimientos" width="100%" class="display" >
    <thead>
        <tr>
            <th>Pedido</th>
            <th>Mesa</th>
            <th>Número de Productos</th>
            <th>Método de Pago</th>
            <th>Precio Total</th>
        </tr>
    </thead>
    <tbody>
        {% for pedido in pedidos %}
            <tr>
                <td>{{pedido.id}}</td>
                <td>{{pedido.mesa}}</td>
                <td>{{pedido.productos}}</td>
                <td>{{pedido.metodoPago}}</td>
                <td>{{pedido.total|number_format(2)}}&euro;</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
<script type="text/javascript">
$(document).ready(function() {
    $('#movimientos').dataTable({
        "oLanguage": {
            "sLengthMenu": "Muestra _MENU_ elementos por pagina",
            "sZeroRecords": "No hay movimientos",
            "sInfo": "Mostrando desde _START_ hasta _END_ de _TOTAL_ elementos",
            "sInfoEmpty": "",
            "sInfoFiltered": "(filtrado de _MAX_ totales)",
            "oPaginate": {
                "sPrevious": "Anterior",
                "sNext": "Siguiente",
                "sFirst": "Primera"
            },
            "sSearch": "Buscar"
        }
    });
});
</script>
<h1>Balance: {{balance.total|number_format(2)}}&euro;</h1>
{% endblock %}